            android:layout_width="@dimen/bit"
            android:layout_height="@dimen/bit"
            android:layout_margin="@dimen/spacing2"

            android:layout_below="@id/h1_4"
            
            android:contentDescription="@string/on"
            android:src="@drawable/bymatko_black_off" />
        <ImageView android:id="@+id/h0_2"
            android:layout_width="@dimen/bit"
            android:layout_height="@dimen/bit"
            android:layout_margin="@dimen/spacing2"

            android:layout_below="@id/h0_4"
            android:layout_toRightOf="@id/h1_2"
            
            android:contentDescription="@string/on"
            android:src="@drawable/bymatko_black_off" />
        
        <ImageView android:id="@+id/h1_1"
            android:layout_width="@dimen/bit"
            android:layout_height="@dimen/bit"
            android:layout_margin="@dimen/spacing2"
            
            android:layout_below="@id/h1_2"
            
