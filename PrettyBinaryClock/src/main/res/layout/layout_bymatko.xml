            android:layout_margin="@dimen/spacing2"
            
            android:layout_below="@id/h0_8"
            android:layout_toRightOf="@id/h1_4"
            
            android:contentDescription="@string/on"
            android:src="@drawable/bymatko_black_off" />
        
